<----deployment-------->						

apiVersion: apps/v1
kind: Deployment
metadata:
        name: tomcat-rs
        labels:
                app: tomcat
                type: os
spec:
        template:
                metadata:
                        name: tomcat-name
                        labels:
                                app: tomcat-app
                                type: server
                spec:
                        containers:
                        - name: tomcat-container
                          image: tomcat
        replicas: 3
        selector:
                matchLabels:
                        type: server
						
						
<----Cluster IP service ------>					

apiVersion: v1
kind: Service
metadata:
        name: redis-service
spec:
        type: ClusterIP
        ports:
                - targetPort: 80
                  port: 80
        selector:
                app: redis-app
                type: back-end
				
				
				
<----Node Port Service----->				

apiVersion: v1
kind: Service
metadata:
        name: redis-service
spec:
        type: NodePort
        ports:
                - targetPort: 80 if not set then assumed same as Port
                  port: 80 # this is mandatory field 
				  NodePort:30008  # Valid Range [30000 to 32767] if not defined then picks value from this range
        selector:
                app: redis-app
                type: back-end

<---Namespace----->				
apiVersion: v1
kind: Namespace
metadata:
	name: dev
spec: 
	hard:
		pods: "10"
		requests.cpu: "4"
		requests.memory: 5Gi
		limits.cpu: "10"
		limits.memory: 10Gi
		
		
		
<---Configuration------>


apiVersion: v1
kind: Pod
metadata:
	name: ubuntu-sleeper-pod
spec: 
	containers:
		- name: ubuntu-sleeper
		  image: ubuntu-sleeper
		  command:["sleep2.0"]
		  args: ["10"]
		  

<----Security Context--------->
apiVersion: v1
kind: Pod
metadata:
	name: web-pod
spec: 
	securityContext:
		runAsUser: 1000
	containers:
		- name: ubuntu
		  image: ubuntu
		  command:["sleep","3600"]
		  
apiVersion: v1
kind: Pod
metadata:
	name: web-pod
spec: 
	
	containers:
		- name: ubuntu
		  image: ubuntu
		  command:["sleep","3600"]	
		  securityContext:
			runAsUser: 1000
			capabilities:
				add: ["MAC_ADMIN"]
<----Config-Map ----->	

apiVersion: v1
kind: ConfigMap
metadata:
	name: app-config
data: 
	APP_COLOR: blue
	APP_MOD: prod
	
<----Secret ----->	

apiVersion: v1
kind: Secret
metadata:
	name: app-secret
data: 
	DB_HOST: mysql
	DB_USER: root
	DB_PASSWRD: password
